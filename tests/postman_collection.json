{
  "info": {
    "_postman_id": "7e3a2b5c-e404-4e8a-b12d-f92393665c89",
    "name": "Timesheet Project Assignments",
    "description": "Tests for project assignments and related tasks",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Login (Get Auth Token)",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          },
          {
            "key": "Accept",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n    \"email\": \"your_email@example.com\",\n    \"password\": \"your_password\"\n}"
        },
        "url": {
          "raw": "{{baseUrl}}/login",
          "host": ["{{baseUrl}}"],
          "path": ["login"]
        },
        "description": "Login to get the authentication token"
      },
      "response": []
    },
    {
      "name": "Get My Assigned Projects",
      "request": {
        "method": "GET",
        "header": [
          {
            "key": "Authorization",
            "value": "Bearer {{authToken}}",
            "type": "text"
          },
          {
            "key": "Accept",
            "value": "application/json",
            "type": "text"
          }
        ],
        "url": {
          "raw": "{{baseUrl}}/my-assigned-projects",
          "host": ["{{baseUrl}}"],
          "path": ["my-assigned-projects"]
        },
        "description": "Get all projects assigned to the authenticated user"
      },
      "response": []
    },
    {
      "name": "Get Project Tasks",
      "request": {
        "method": "GET",
        "header": [
          {
            "key": "Authorization",
            "value": "Bearer {{authToken}}",
            "type": "text"
          },
          {
            "key": "Accept",
            "value": "application/json",
            "type": "text"
          }
        ],
        "url": {
          "raw": "{{baseUrl}}/projects/1/tasks",
          "host": ["{{baseUrl}}"],
          "path": ["projects", "1", "tasks"]
        },
        "description": "Get all tasks for a specific project. Replace '1' with the actual project ID you want to test."
      },
      "response": []
    }
  ],
  "event": [
    {
      "listen": "prerequest",
      "script": {
        "type": "text/javascript",
        "exec": [
          ""
        ]
      }
    },
    {
      "listen": "test",
      "script": {
        "type": "text/javascript",
        "exec": [
          ""
        ]
      }
    }
  ],
  "variable": [
    {
      "key": "baseUrl",
      "value": "http://127.0.0.1:8000/api",
      "type": "string"
    },
    {
      "key": "authToken",
      "value": "your_token_here",
      "type": "string"
    }
  ]
}
